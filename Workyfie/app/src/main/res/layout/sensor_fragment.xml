<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/information_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:stretchColumns="1,1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewStatusSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@string/current_status" />

            <TextView
                android:id="@+id/status_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2" />

        </TableRow>
    </TableLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_below="@id/information_table" />

    <Chronometer
        android:id="@+id/chrono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/graph" />

    <Button
        android:id="@+id/start_record"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chrono"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/start_record" />

    <Button
        android:id="@+id/disconnect_sensor"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_record"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/disconnect_sensor" />

    <Button
        android:id="@+id/connect_sensor"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_record"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/connect_sensor" />

    <ListView
        android:id="@+id/result_list"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/disconnect_sensor"
        android:headerDividersEnabled="false" />

    <Button
        android:id="@+id/stop_record"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/start_record"
        android:layout_below="@+id/chrono"
        android:layout_gravity="center"
        android:text="@string/stop_sensor" />

</RelativeLayout>
